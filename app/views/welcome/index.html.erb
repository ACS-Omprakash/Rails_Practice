<h1>Pages</h1>

<ul>
  <% @pages.each do |page| %>
    <li>
      <%= page.title %>
      <%= page.body %>

    </li>
  <% end %>
</ul>
<h1>Pages</h1>

<ul>
  <% @pages.each do |page| %>
    <li>
      <a href="/pages/<%= page.id %>">
        <%= page.title %>
      </a>
    </li>
  <% end %>
</ul>
<h1>Pages</h1>

<ul>
  <% @pages.each do |page| %>
    <li>
      <a href="<%= page_path(page) %>">
        <%= page.title %>
      </a>
    </li>
  <% end %>
</ul>
<h1>Pages</h1>

<ul>
  <% @pages.each do |page| %>
    <li>
      <%= link_to page.title, page %>
    </li>
  <% end %>
</ul>
<h1>New Page</h1>

<%= form_with model: @page do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<form action="/pages" accept-charset="UTF-8" method="post">
  <input type="hidden" name="authenticity_token" value="...">

  <div>
    <label for="page_title">Title</label><br>
    <input type="text" name="page[title]" id="page_title">
  </div>

  <div>
    <label for="page_body">Body</label><br>
    <textarea name="page[body]" id="page_body"></textarea>
  </div>

  <div>
    <input type="submit" name="commit" value="Create Page" data-disable-with="Create Page">
  </div>
</form>
